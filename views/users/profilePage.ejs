<%- include('userSubHeader') %>
<style>
  body {
    
    background-color: #f9f9f9; /* Adjust for your theme */
    color: #333;
  }

  .profile-container {
    max-width: 900px;
    margin: 50px auto;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .profile-header {
    background-color: #4e7f5ec4; /* Primary theme color */
    color: #ffffff;
    text-align: center;
    padding: 20px;
  }

  .profile-header h3 {
    margin: 0;
    font-size: 1.8rem;
  }

  .profile-body {
    padding: 20px;
    text-align: center;
  }

  .profile-body img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    margin-bottom: 15px;
    border: 3px solid #007bff;
  }

  .profile-body h5 {
    font-size: 1.4rem;
    color: #333;
    margin: 10px 0;
  }

  .profile-body span {
    display: block;
    color: #555;
    margin-bottom: 10px;
  }

  .profile-body .info {
    font-size: 1rem;
    color: #666;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    margin-top: 15px;
    gap: 15px;
  }

  .social-icons i {
    font-size: 1.2rem;
    color: #007bff;
    cursor: pointer;
    transition: color 0.3s;
  }

  .social-icons i:hover {
    color: #0056b3;
  }

  .action-buttons {
    margin-top: 20px;
  }

  .action-buttons .btn {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    margin: 0 10px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s;
  }

  .btn-edit {
    background-color: #007bff;
    color: #fff;
  }

  .btn-edit:hover {
    background-color: #0056b3;
  }

  .btn-logout {
    background-color: #dc3545;
    color: #fff;
  }

  .btn-logout:hover {
    background-color: #b02a37;
  }
</style>

<main>
  <div class="profile-container">
    <!-- Header Section -->
    <div class="profile-header">
      <h3 class="amatic-sc-bold" style="color: white; font-size: 2.4rem;">MY PROFILE</h3>
    </div>

    <!-- Body Section -->
    <div class="profile-body">
      <!-- User Image -->
     

      <!-- User Info -->
      <h5 class="gruppo-regular" style="font-size: 2rem;"><%= user.name %></h5>
      <span class="gruppo-regular" style="font-size: 1.5rem;"><%= user.email %></span>
      <span class="gruppo-regular" style="font-size: 1.5rem;"><%= user.mobile %></span>

      <!-- Action Buttons -->
      <div class="action-buttons">
        <a href="/logout" class="btn btn-logout">Logout  <i class="fas fa-sign-out-alt"></i></a>
      </div>
    </div>
  </div>
</main>

