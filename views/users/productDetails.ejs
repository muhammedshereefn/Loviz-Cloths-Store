<%- include('userSubHeader') %>


       <div class="popup" style="min-width: 300px; height: 70px; background-color: rgba(128, 128, 128, 0.459);
        position: fixed; z-index: 1000; right: 0; display: none; justify-content: center; align-items: center; color: white; border-radius: 10px; margin: 10px;">
                <span style=" font-size: 20px;">Product Added To Cart</span>
       </div> 

        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="product-detail accordion-detail">
                            <div class="row mb-50">
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-gallery">
                                        <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                        <!-- MAIN SLIDES -->
                                        <div class="product-image-slider">

                                            <% productdetails.images.forEach((items)=>{%>
                                            
                                                <figure class="border-radius-10">
                                                    <img src="<%= items %>" alt="product image">
                                                </figure>
                                            
                                           <% }) %>


                                           
                                        </div>
                                        <!-- THUMBNAILS -->
                                        <div class="slider-nav-thumbnails pl-15 pr-15">

                                            <% productdetails.images.forEach((images)=>{ %>
                                                <div><img src="<%= images %>" alt="product image"></div>

                                            <% }) %>
                                            <!-- <div><img src="/user/assets/imgs/shop/thumbnail-3.jpg" alt="product image"></div> -->
                                           
                                        </div>
                                    </div>
                                    <!-- End Gallery -->
                                    <div class="social-icons single-share">
                                        <ul class="text-grey-5 d-inline-block">
                                            <li><strong class="mr-10">Share this:</strong></li>
                                            <li class="social-facebook"><a href="#"><img src="/user/assets/imgs/theme/icons/icon-facebook.svg" alt=""></a></li>
                                            <li class="social-instagram"><a href="https://www.instagram.com/6xobags/"><img src="/user/assets/imgs/theme/icons/icon-instagram.svg" alt=""></a></li>
                                        </ul>
                                    </div>
                                </div>




                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-info">
                                        <h2 class="title-detail amatic-sc-bold" style="font-size: 2.5rem;"> <%= productdetails.name  %> </h2>
                                        <div class="product-detail-rating">
                                            <div class="pro-details-brand">
                                                <span class="gruppo-regular" style="font-size: 1.3rem;"> Brand: <a href="shop-grid-right.html"> <%= productdetails.brand  %></a></span>
                                                <br>
                                                <span class="gruppo-regular" style="font-size: 1.3rem;"><a href="shop-grid-right.html" style="color: red; font-weight: 800; font-size: larger;"> <%= productdetails.offerPercentage  %></a> % OFF</span>
                                            </div>
                                            
                                        </div>
                                        <div class="clearfix product-price-cover">
                                            <div class="product-price primary-color float-left">
                                                <ins><span class="amatic-sc-bold" style="color: #4e7f5ec4; font-size: 2.5rem;">₹<%= productdetails.price  %></span></ins>
                                                <ins><span class="old-price ml-15 gruppo-regular" style="font-size: 1.5rem;">₹ <%= productdetails.offerPrice  %></span></ins>
                                                <p style="margin-top: 3px; color: green; font-size: 15px;" class="gruppo-regular">Free Delivery</span>

                                            </div>
                                        </div>
                                        <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                        <div class="short-desc mb-30 gruppo-regular">
                                            <p><%= productdetails.description  %></p>
                                        </div>
                                        <div class="product_sort_info font-xs mb-30">
                                            <ul>
                                                <li class="mb-10 gruppo-regular" style="font-size: 1rem;"><i class="fi-rs-crown mr-5 gruppo-regular"></i> 2 Year Brand Warranty</li>
                                                <li class="mb-10 gruppo-regular" style="font-size: 1rem;"><i class="fi-rs-refresh mr-5 gruppo-regular"></i> 30 Day Return Policy</li>
                                                <li class="mb-10 gruppo-regular" style="font-size: 1rem;"><i class="fi-rs-credit-card mr-5 gruppo-regular"></i> Cash on Delivery available</li>
                                            </ul>
                                            
                                        </div>
                                        
                                        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                               <div class="detail-extralink">
    <div class="product-extra-link2">
        <% if (productdetails.quantity > 0) { %>
            <a 
                href="https://wa.me/918075996986?text=<%= encodeURIComponent(`I want this product: ${productdetails.name}. Is Available ?: ${productdetails.images[0]}`) %>" 
                target="_blank" 
                class="button w-100 amatic-sc-bold" 
                style="background-color: #4e7f5ec4; font-size: 1.5rem; text-align: center; display: inline-block; padding: 0px 20px; color: white; text-decoration: none; border-radius: 5px;">
                ORDER NOW!
            </a>
        <% } else { %>
            <button type="button" disabled class="btn btn-outline-danger button-add-to-cart">Out Of Stock</button>
        <% } %>
        
    </div>
</div>


                                        <div class="similar-products mt-30">
                                            <% if (similarProducts.length > 0) { %>
                                                <h3 style="font-size: medium;">COLORS</h3>
                                                <div class="row" style="display: flex; flex-wrap: wrap; gap: 10px; justify-content: center;">
                                                    <% similarProducts.forEach(product => { %>
                                                        <div class="col-6 col-sm-4 col-md-3" style="display: flex; justify-content: center; align-items: center;">
                                                            <div class="product-card" 
                                                                style="border: 1px solid #e0e0e0; 
                                                                       border-radius: 8px; 
                                                                       padding: 10px; 
                                                                       width: 200px; 
                                                                       height: 300px; 
                                                                       display: flex; 
                                                                       flex-direction: column; 
                                                                       align-items: center; 
                                                                       justify-content: space-between; 
                                                                       text-align: center;
                                                                       transition: box-shadow 0.3s ease;">
                                                                <a href="/productdetails/<%= product._id %>">
                                                                    <img src="<%= product.coverimage %>" 
                                                                         alt="<%= product.name %>" 
                                                                         style="width: 100%; 
                                                                                max-width: 150px; 
                                                                                height: 150px; 
                                                                                object-fit: cover;" 
                                                                         class="img-fluid" />
                                                                </a>
                                                                <h4 style="font-size: 1rem; margin-top: 10px;"><%= product.name %></h4>
                                                            </div>
                                                        </div>
                                                    <% }) %>
                                                </div>
                                            <% } %>
                                        </div>
                                        
                                        
                                        
                                        <ul class="product-meta font-xs color-grey mt-50">
                                            <li class="gruppo-regular" style="font-size: 1rem;">STOCK :<span class="in-stock text-success ml-5"><%= productdetails.quantity  %></span></li>
                                        </ul>
                                    </div>
                                    <!-- Detail Info -->
                                
                             
                                </div>
                                





                            </div>
                           
                            
                            
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer class="main" style="background-color: #4e7f5ec4;">
